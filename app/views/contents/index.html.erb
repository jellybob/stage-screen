<h1>Content</h1>
<p><%= link_to "Add Content", new_content_path %>
<table class="table">
  <thead>
    <tr>
      <th>Content Type</th>
      <th>URL</th>
      <th>Tags</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @content.each do |item| %>
      <tr>
        <td><%= item.content_type %></td>
        <td><%= link_to item.url, item.url %></td>
        <td><%= item.tags %></td>
        <td><%= link_to "Edit", [:edit, item] %> | <%= link_to "Delete", content_path(item), method: :delete %>
      </tr>
    <% end %>
  </tbody>
</table>
